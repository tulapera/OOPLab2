        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab 2" Height="300" Width="400">
    <Grid>
        <TextBox Name="Box" Width="200" Height="25" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Name="xBox" Width="200" Height="25" Margin="10,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Name="yBox" Width="200" Height="25" Margin="10,60,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Name="zBox" Width="200" Height="25" Margin="10,90,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Button Content="Розрахувати" Width="100" Height="30" Margin="10,125,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Click="CalculateButton_Click"/>

        <TextBox Name="resultBox" Width="200" Height="25" Margin="10,160,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" IsReadOnly="True"/>
    </Grid>
</Window>
